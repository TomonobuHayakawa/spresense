config KX022
	bool "Kionix KX022 Acceleration Sensor"
	default n
	select CXD56_I2C
	---help---
		Enable driver for the Kionix KX0222 acceleration sensor.

if KX022

config KX022_SCU
	bool "SCU Sequencer"
	default y
	depends on CXD56_SCU
	---help---
		Use the sensor control unit (SCU) sequencer.
		Support only driver with the sensor control unit (SCU) sequencer.

endif # KX022

config BM1422GMV
	bool "Rohm BM1422GMV Magnetic Sensor"
	default n
