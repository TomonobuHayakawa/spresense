#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_LTE
	bool "LTE example"
	default n
	---help---
		Enable the LTE example

if EXAMPLES_LTE

config EXAMPLES_LTE_PROGNAME
	string "Program name"
	default "lte"
	depends on BUILD_KERNEL
	---help---
		This is the name of the program that will be use when the NSH ELF
		program is installed.

config EXAMPLES_LTE_PRIORITY
	int "lte task priority"
	default 100

config EXAMPLES_LTE_STACKSIZE
	int "lte stack size"
	default 2048

config EXAMPLES_LTE_APN_NAME
	string "Access Point Name"
	default ""

config EXAMPLES_LTE_APN_IPTYPE
	int "IP type"
	default 0
	range 0 2
	---help---
		IP type is selected from IP, IPv6 and IPv4/v6.
		Values are IP=0, IPv6=1 and IPv4/v6=2.

config EXAMPLES_LTE_APN_AUTHTYPE
	int "Authentication type"
	default 0
	range 0 2
	---help---
		Authentication type is selected from NONE, PAP and CHAP.
		Values are NONE=0, PAP=1, CHAP=2.

config EXAMPLES_LTE_APN_USERNAME
	string "Username used for authentication"
	default ""

config EXAMPLES_LTE_APN_PASSWD
	string "Password used for authentication"
	default ""

endif
